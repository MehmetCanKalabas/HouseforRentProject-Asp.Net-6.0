@model HouseforRentProject.Models.MVVM.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/images/logo.svg">
                            </div>
                            <h4>Kayıt Formu</h4>
                            <form class="pt-3" method="post">

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="Adınız">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Surname" placeholder="SoyAdınız">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Username" placeholder="Kullanıcı Adınız">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Mail" placeholder="Mail">
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="Password" class="form-control form-control-lg" asp-for="Password" placeholder="Şifreniz">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="Password" class="form-control form-control-lg" asp-for="ConfirmPassword" placeholder="Şifre Tekrar">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src=".~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/js/off-canvas.js"></script>
    <script src="~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/js/hoverable-collapse.js"></script>
    <script src="~/PurpleAdmin-Free-Admin-Template-master/PurpleAdmin-Free-Admin-Template-master/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>