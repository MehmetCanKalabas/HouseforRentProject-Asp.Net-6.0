@model VillaRegisterViewModel

@{
    Layout = null;
}

<form class="pt-3" method="post">

    <div class="form-group">
        <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="Villa Adı">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="text" class="form-control form-control-lg" asp-for="City" placeholder="Şehir">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="text" class="form-control form-control-lg" asp-for="Price" placeholder="Fiyat">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="text" class="form-control form-control-lg" asp-for="Area" placeholder="Alan">
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="text" class="form-control form-control-lg" asp-for="Room" placeholder="Oda Sayısı">
        <span asp-validation-for="Room" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="text" class="form-control form-control-lg" asp-for="Image" placeholder="Resim">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="text" class="form-control form-control-lg" asp-for="Description" placeholder="Açıklama">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Kaydet</button>
    </div>

</form>